<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
            android:id="@+id/navbar1"
            android:gravity="center|left"
            android:textSize="30dp"
            android:text="Raze Galactic"
            android:textColor="#fff"
            android:background="#0A710E"
            android:layout_width="match_parent"
            android:layout_height="60dp" tools:ignore="MissingConstraints"/>

    <ImageView
            android:id="@+id/imgItem1"
            app:layout_constraintTop_toBottomOf="@+id/navbar1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/imgItem2"
            app:layout_constraintHorizontal_chainStyle="spread"
            android:src="@drawable/space_station_icon"
            android:layout_marginTop="20dp"
            android:layout_width="40dp"
            android:layout_height="40dp"/>





    <ImageView
            android:id="@+id/imgItem2"
            app:layout_constraintTop_toBottomOf="@+id/navbar1"
            app:layout_constraintStart_toEndOf="@+id/imgItem1"
            app:layout_constraintEnd_toStartOf="@id/imgItem3"
            android:src="@drawable/rocket_icon"
            android:layout_marginTop="20dp"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

    <ImageView
            android:id="@+id/imgItem3"
            app:layout_constraintTop_toBottomOf="@+id/navbar1"
            app:layout_constraintStart_toEndOf="@id/imgItem2"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/rover_icon"
            android:layout_marginTop="20dp"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

    <TextView
            android:id="@+id/text1"

            app:layout_constraintTop_toBottomOf="@id/imgItem1"
            app:layout_constraintStart_toStartOf="@id/imgItem1"
            app:layout_constraintEnd_toEndOf="@id/imgItem1"
            android:layout_marginTop="16dp"
            android:text="Space Stations"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/text2"
            app:layout_constraintTop_toBottomOf="@id/imgItem2"
            app:layout_constraintStart_toStartOf="@id/imgItem2"
            app:layout_constraintEnd_toEndOf="@id/imgItem2"
            android:layout_marginTop="16dp"
            android:text="Flights"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/text3"
            app:layout_constraintTop_toBottomOf="@id/imgItem3"
            app:layout_constraintStart_toStartOf="@id/imgItem3"
            app:layout_constraintEnd_toEndOf="@id/imgItem3"
            android:layout_marginTop="16dp"
            android:text="Rovers"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/box1"
            android:gravity="center"
            android:textColor="#fff"
            android:text="DCA"
            android:background="#0F6712"
            android:layout_marginRight="30dp"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintHorizontal_bias=".5"
            app:layout_constraintTop_toBottomOf="@id/text1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/box2"
            android:layout_width="100dp"
            android:layout_height="80dp"/>

    <TextView
            android:id="@+id/box2"
            android:gravity="center"
            android:textColor="#fff"
            android:text="DCA"
            android:background="#0F6712"
            app:layout_constraintTop_toBottomOf="@id/text1"
            app:layout_constraintStart_toEndOf="@id/box1"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="100dp"
            android:layout_height="80dp"/>
    <ImageButton

            android:id="@+id/imgBox1"
            app:layout_constraintTop_toBottomOf="@id/imgItem2"
            app:layout_constraintStart_toStartOf="@id/box1"
            app:layout_constraintEnd_toEndOf="@id/box2"
            android:src="@drawable/double_arrows"
            android:layout_width="50dp"
            android:layout_height="50dp" android:layout_marginTop="52dp"/>

    <Switch
            android:id="@+id/one1"
            android:padding="10dp"
            android:background="#FF7700"
            android:text="One Way"
            android:textColor="#fff"
            android:layout_width="160dp"
            android:layout_height="42dp"
            tools:layout_editor_absoluteX="18dp" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/box1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp"/>

    <TextView
            app:layout_constraintTop_toBottomOf="@id/one1"
            app:layout_constraintStart_toStartOf="@id/one1"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:background="#FF7700"
            android:text="1 Traveller"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    <ImageView
            android:layout_marginLeft="100dp"
            android:src="@drawable/rocket_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/galaxy"
            app:layout_constraintBottom_toBottomOf="@id/galaxy"
            android:layout_width="30dp"
            android:layout_height="50dp"/>

    <ImageView
            android:id="@+id/galaxy"
            android:src="@drawable/galaxy"
            android:layout_marginBottom="200dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/btn1"
            android:text="DEPART"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="#0C6E0F"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>
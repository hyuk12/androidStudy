<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
            android:id="@+id/btn1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="button1"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
    <Button
            android:id="@+id/btn2"
            android:layout_margin="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="btn2"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

    <Button
            android:id="@+id/btn3"
            app:layout_constraintStart_toEndOf="@id/btn2"
            app:layout_constraintTop_toTopOf="@id/btn2"
            android:layout_marginLeft="20dp"
            android:text="btn3"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

    <Button
            android:id="@+id/btn4"
            app:layout_constraintStart_toStartOf="@id/btn2"
            app:layout_constraintEnd_toEndOf="@id/btn3"
            app:layout_constraintTop_toBottomOf="@id/btn2"
            android:text="btn4"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

    <Button
            android:id="@+id/btn5"
            app:layout_constraintTop_toTopOf= "parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="30dp"
            android:text="btn5"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

    <Button
            android:id="@+id/btn6"
            app:layout_constraintTop_toTopOf= "@id/btn5"
            app:layout_constraintEnd_toStartOf="@id/btn5"
            android:layout_marginRight="20dp"
            android:text="btn6"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

    <Button
            android:id="@+id/btn7"
            app:layout_constraintStart_toStartOf="@id/btn6"
            app:layout_constraintTop_toBottomOf="@id/btn6"
            app:layout_constraintEnd_toEndOf="@id/btn5"
            android:text="btn7"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

    <TextView
            android:id="@+id/tv1"
            android:layout_marginBottom="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv2"
            android:gravity="center"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintHorizontal_bias=".5"
            android:textColor="#fff"
            android:text="tv1"
            android:background="@color/black"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

    <TextView
            android:id="@+id/tv2"
            app:layout_constraintStart_toEndOf="@id/tv1"
            app:layout_constraintTop_toTopOf="@id/tv1"
            app:layout_constraintEnd_toStartOf="@id/tv3"
            android:gravity="center"
            android:textColor="#fff"
            android:text="tv2"
            android:background="@color/black"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

    <TextView
            android:id="@+id/tv3"
            app:layout_constraintStart_toEndOf="@id/tv2"
            app:layout_constraintTop_toTopOf="@id/tv1"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            android:textColor="#fff"
            android:text="tv3"
            android:background="@color/black"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

    <TextView
            android:id="@+id/tv4"
            android:layout_marginBottom="150dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv5"
            android:gravity="center"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintHorizontal_bias=".5"
            android:textColor="#fff"
            android:text="tv4"
            android:background="@color/black"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

    <TextView
            android:id="@+id/tv5"
            app:layout_constraintStart_toEndOf="@id/tv4"
            app:layout_constraintTop_toTopOf="@id/tv4"
            app:layout_constraintEnd_toStartOf="@id/tv6"
            android:gravity="center"
            android:textColor="#fff"
            android:text="tv5"
            android:background="@color/black"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

    <TextView
            android:id="@+id/tv6"
            app:layout_constraintStart_toEndOf="@id/tv5"
            app:layout_constraintTop_toTopOf="@id/tv4"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            android:textColor="#fff"
            android:text="tv3"
            android:background="@color/black"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>